#!/usr/bin/env zsh

# .zsh_aliases
# @author deng
# since 2024 2025

if [[ -x $(command -v eza) ]]; then
  alias l.='eza -a'
  alias ls='eza -F --sort=type'
  alias ll='eza -aF --long --sort=type'
else
  alias ls='ls -F --color=auto'
  alias ll='ls -alhF --color=auto'
fi

alias ~='cd ~'
alias ..='cd ..'
alias c='clear'

alias ff='fastfetch'
alias vi='nvim'
alias gst='git status'
alias cfg='cd ~/.config'
alias 哈吉米='cat'
